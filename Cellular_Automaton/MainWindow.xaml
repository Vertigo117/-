<Window x:Class="Cellular_Automaton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cellular_Automaton"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600" Background="DimGray" Name="mainForm">
    <Grid Name="mainGrid" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="bottomGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Width="50" Name="startButton" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">Start</Button>
            <Button Width="50" Name="clearButton" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0">Clear</Button>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Name="numberOfGenerationsText" Grid.Column="2">0</TextBlock>
        </Grid>
        <Grid Name="gameField"/>
    </Grid>
</Window>
